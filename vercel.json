{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "provided"
    }
  },
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "/api/index.php"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}   